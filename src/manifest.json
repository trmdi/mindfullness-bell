{
  "update_url": "https://trmdi.github.io/mindfulness-bell/update.xml",

  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "3.1.2.8",
  "description": "__MSG_extDesc__",
  "author": "__MSG_extAuthor__",
  "homepage_url": "https://github.com/trmdi/mindfulness-bell",
  "default_locale": "en",
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": "icons/icon48.png",
    "default_title": "__MSG_ext_default_title__",
    "default_popup": "views/popup.html"
  },
  "permissions": [
    "alarms",
    "notifications",
    "offscreen",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/icon.png", "bells/*", "images/*"],
      "matches": ["*://*/*"]
    }
  ],
  "icons": {
    "128": "icons/icon128.png",
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  }
}
